---
import Button from './Button.astro';
---

<section class="hero" id="home">
  <div class="hero-overlay"></div>
  <div class="container">
    <div class="hero-content">
      <h1>You Were Built for More</h1>
      <p class="hero-tagline">Strength. Structure. Results that stick.</p>
      <p class="hero-subtitle">
        Online coaching for men who want to stop starting over, train with purpose, and build a body (and life) they're proud of.
      </p>
      <div class="hero-cta">
        <Button 
          text="Start Your 5-Day Reset" 
          href="#reset" 
          variant="primary"
          classes="hero-btn"
        />
        <Button 
          text="Book a Free Strategy Call" 
          href="#contact" 
          variant="secondary"
          classes="hero-btn"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    height: 100vh;
    min-height: 600px;
    background-image: url('/images/jaxon-hero.jpg');
    background-size: cover;
    background-position: center;
    position: relative;
    display: flex;
    align-items: center;
    text-align: center;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(5, 8, 26, 0.7), rgba(10, 17, 40, 0.9));
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .hero-tagline {
    font-size: clamp(1.2rem, 2.5vw, 1.8rem);
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--accent-blue);
  }
  
  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.3rem);
    margin-bottom: 2.5rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero-cta {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .hero-btn {
    min-width: 200px;
  }
  
  @media (max-width: 768px) {
    .hero {
      text-align: center;
    }
    
    .hero-content {
      padding: 1rem;
    }
  }
</style>
